extends layout

block content
  h1.text-center.mt-4.mb-4= title

  -
    const results = [
      { location: 'North Block', plantCount: 24, soilType: 'Loam' },
      { location: 'Riverside', plantCount: 18, soilType: 'Sandy' },
      { location: 'West Terrace', plantCount: 31, soilType: 'Clay' }
    ];

  .container.text-center
    .row.justify-content-center.g-4
      each item, i in results
        .col-md-3.col-sm-6(onclick=`buy(${i})`, style="cursor:pointer; border:1px solid #ccc; border-radius:12px; padding:15px; box-shadow:0 2px 6px rgba(0,0,0,0.1); transition:transform 0.2s;")
          h5.text-success #{item.location}
          p.mb-1 Plants: #{item.plantCount}
          p.mb-2 Soil: #{item.soilType}

  script.
    function buy(i){
      alert(`You purchased item ${i}`);
    }
